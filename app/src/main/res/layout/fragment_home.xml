<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/grid_layout"
            android:alignmentMode="alignBounds"
            tools:context=".MainActivity"

            android:useDefaultMargins="true"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/but_edu"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="@drawable/education"
                android:onClick="clickEducation" />

            <Button
                android:id="@+id/but_med"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="@drawable/medical"
                android:onClick="clickMed" />

            <Button
                android:id="@+id/but_parks"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/parks"
                android:onClick="clickPark" />

            <Button
                android:id="@+id/but_travel"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/travel"
                android:onClick="clickTravel" />

            <Button
                android:id="@+id/but_prayer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:background="@drawable/prayers"

                android:onClick="clickPrayer" />

            <Button
                android:id="@+id/official"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:background="@drawable/official"

                android:onClick="clickOfficial" />

            <Button
                android:id="@+id/unofficial"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:background="@drawable/unofficials"
                android:onClick="clickUnofficial" />

            <Button
                android:id="@+id/but_rest"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:background="@drawable/restaurant"
                android:onClick="clickMenu" />

            <Button
                android:id="@+id/but_bank"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:background="@drawable/bank"
                android:onClick="clickBank" />

            <Button
                android:id="@+id/but_survey"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:background="@drawable/survey"
                android:onClick="clickSurvey" />





        </GridLayout></ScrollView>

</RelativeLayout>
